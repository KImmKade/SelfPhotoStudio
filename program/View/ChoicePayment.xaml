<Page x:Class="wpfTest.View.ChoicePayment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpfTest.View"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ChoicePayment" Background="White">

    <Grid Loaded="Grid_Loaded">
        <Image x:Name="backimg"/>
        <Image x:Name="cardimg" Width="480" Height="346" Margin="1041,338,399,396" IsEnabled="True" MouseLeftButtonDown="cardimg_MouseLeftButtonDown"/>
        <Image x:Name="cashimg" Width="480" Height="346" Margin="399,338,1041,396" IsEnabled="False" MouseLeftButtonDown="cashimg_MouseLeftButtonDown"/>
        <Image x:Name="BackImg" Width="213" Height="73" Margin="78,928,1630,80" MouseLeftButtonDown="BackImg_MouseLeftButtonDown"/>
        <Image x:Name="NextImg" Width="213" Height="73" Margin="1630,928,78,80" MouseLeftButtonDown="NextImg_MouseLeftButtonDown"/>
        <TextBlock x:Name="Timer" HorizontalAlignment="Center" FontSize="55" VerticalAlignment="Top" Width="200" Height="100" Margin="1670,150,0,0" FontFamily="Arial" FontWeight="Bold" TextAlignment="Center"/>
    </Grid>
</Page>
