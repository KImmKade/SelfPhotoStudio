        <Image x:Name="ThirdPlayer" Width="360" Height="500" Margin="986,317,574,263" MouseLeftButtonDown="ThirdPlayer_MouseLeftButtonDown"/>
        <Image x:Name="FourthPlayer" Width="360" Height="500" Margin="1392,317,168,263" MouseLeftButtonDown="FourthPlayer_MouseLeftButtonDown"/>
        <Image x:Name="FifthPlayer" Width="360" Height="500" Margin="1557,317,102,263" MouseLeftButtonDown="FifthPlayer_MouseLeftButtonDown"/>
        <Image x:Name="BackImg" Stretch="Fill" Width="370" Height="100" Margin="569,927,981,53" MouseLeftButtonDown="BackImg_MouseLeftButtonDown"/>
        <Image x:Name="NextImg" Stretch="Fill" Width="370" Height="100" Margin="979,927,571,53" MouseLeftButtonDown="NextImg_MouseLeftButtonDown"/>
